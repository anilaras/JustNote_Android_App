<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aras.notepad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotePad"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name=".PasswordActivity" />
        <activity android:name=".PrivateNoteActivity" />
        <activity android:name=".NoteFullViewActivity" />
        <activity android:name=".NoteAddActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".NoteEditActivity"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>